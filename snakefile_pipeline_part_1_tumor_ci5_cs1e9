####INTERSECTION####

rule high_cs_exclude_singletons_tumor_subtract_tumor_germline:
    input:
        tumor_pre = "data/{pt}/{output_f}/ci5_cs1e9/tumor_kmers_singletons_excluded_tumor_4_cs.kmc_pre",
        tumor_suf = "data/{pt}/{output_f}/ci5_cs1e9/tumor_kmers_singletons_excluded_tumor_4_cs.kmc_suf",
        germline_pre = "data/{pt}/{output_f}/cs1e9/germline_kmers_cs1e9.kmc_pre",
        germline_suf = "data/{pt}/{output_f}/cs1e9/germline_kmers_cs1e9.kmc_suf"
    output: 
        unique_tumor_kmers_pre = "data/{pt}/{output_f}/ci5_cs1e9/unique_tumor_kmers_singletons_excluded_tumor_4_cs.kmc_pre",
        unique_tumor_kmers_suf = "data/{pt}/{output_f}/ci5_cs1e9/unique_tumor_kmers_singletons_excluded_tumor_4_cs.kmc_suf"
    threads: 1
    conda: 
        "envs/ctDNA.yml"
    shell:
        "kmc_tools simple data/{wildcards.pt}/{wildcards.output_f}/ci5_cs1e9/tumor_kmers_singletons_excluded_tumor_4_cs -ci5 -cx1000000000 data/{wildcards.pt}/{wildcards.output_f}/cs1e9/germline_kmers_cs1e9 -ci0 -cx1000000000 kmers_subtract data/{wildcards.pt}/{wildcards.output_f}/ci5_cs1e9/unique_tumor_kmers_singletons_excluded_tumor_4_cs -ci0 -cx1000000000 -cs1000000000"
        #"kmc_scripts/kmers_subtract.py"
        #we can put -ci and -cx here for each input as well, and also for the output
        #there are several options for the counters, see kmc_tools simple --help. They can be defined with -oc, and I think what we want is -ocleft (take the counts from the left data base, so the tumor?)

        
        
#########################################################################


####PLOTS###########
rule high_cs_exclude_singletons_tumor_make_plotfile_tumor:
    input: 
        kmers_pre = "data/{pt_tumor_plot}/{output_f_tumor_plot}/ci5_cs1e9/tumor_kmers_singletons_excluded_tumor_4_cs.kmc_pre", 
        kmers_suf = "data/{pt_tumor_plot}/{output_f_tumor_plot}/ci5_cs1e9/tumor_kmers_singletons_excluded_tumor_4_cs.kmc_suf"
    output: 
        plotdata = "data/{pt_tumor_plot}/{output_f_tumor_plot}/ci5_cs1e9/plotdata_tumor_singletons_excluded_tumor_4_cs.txt"
    conda:
        "envs/ctDNA.yml"
    shell: 
        "kmc_tools transform data/{wildcards.pt_tumor_plot}/{wildcards.output_f_tumor_plot}/ci5_cs1e9/tumor_kmers_singletons_excluded_tumor_4_cs -ci0 -cx1000000000 histogram {output.plotdata} -ci0 -cx1000000000"
        #"kmc_scripts/kmers_transform.py"


rule high_cs_exclude_singletons_tumor_filter_plotfile_tumor:
    input:
        plotdata = "data/{pt_tumor_plot}/{output_f_tumor_plot}/ci5_cs1e9/plotdata_tumor_singletons_excluded_tumor_4_cs.txt"
    output: 
        plotdata_filtered = "data/{pt_tumor_plot}/{output_f_tumor_plot}/ci5_cs1e9/plotdata_tumor_singletons_excluded_tumor_4_cs_filtered.txt"
    conda:
        "envs/ctDNA.yml"
    shell: 
        "awk -F '\t' '$2!=0' {input.plotdata} > {output.plotdata_filtered}"

rule high_cs_exclude_singletons_tumor_make_plot_tumor:
    input: 
        input_filename = "data/{pt_tumor_plot}/{output_f_tumor_plot}/ci5_cs1e9/plotdata_tumor_singletons_excluded_tumor_4_cs_filtered.txt"
    output: 
        output_filename = "data/{pt_tumor_plot}/{output_f_tumor_plot}/ci5_cs1e9/histogram_tumor_kmers_singletons_excluded_tumor_4_cs.png"
    conda: 
        "envs/ctDNA.yml"
    script:
        "histogram_plots.R"


