rule make_plotfile_germline_union:
    input: 
        kmers_pre = "data/germline_union_NEW.kmc_pre",
        kmers_suf = "data/germline_union_NEW.kmc_suf"
    output: 
        plotdata = "data/plotdata_germline_union_NEW.txt"
    conda:
        "envs/ctDNA.yml"
    shell: 
        "kmc_tools transform data/germline_union_NEW -ci0 -cx1000000000 histogram {output.plotdata} -ci0 -cx1000000000"
        #"kmc_scripts/kmers_transform.py"


rule filter_plotfile_germline_union:
    input: 
        plotdata = "data/plotdata_germline_union_NEW.txt"
    output: 
        plotdata_filtered = "data/plotdata_germline_union_filtered_NEW.txt"
    conda:
        "envs/ctDNA.yml"
    shell: 
        "awk -F '\t' '$2!=0' {input.plotdata} > {output.plotdata_filtered}"