
import pandas as pd
from pathlib import Path
import os

####MAKE THE TMP FOLDER WITH WILDCARD NAME!

paramspace = pd.read_csv("data/metadata/paramspace_phaseI.csv", index_col='pt_id')
GERMLINE_FILES = paramspace["germline_bam_path"]
SAMPLES = paramspace.index
OUTPUT_PT_FOLDER = paramspace["output_path_unique_kmers"]

OUTPUT_GERMLINE = expand("data/{pt_normal}/{output_f_normal}/all_germline_filtered_bams_tumor_ci5_cs1e9_k40/germline_kmers.kmc_pre", zip, pt_normal=SAMPLES, output_f_normal = OUTPUT_PT_FOLDER)
OUTPUT_UNION_GERMLINE = "data/germline_union_k40.kmc_pre"
PLOTDATA_FILTERED = "data/plotdata_germline_union_filtered_k40.txt"

for pt, fd in zip(SAMPLES, OUTPUT_PT_FOLDER):
    tmp_folder_tumor = "tmp_normal/tmp_normal_" + str(pt) + "/" + str(fd) + "_filtered_bams_tumor_ci4_cs1e9_k40/"
    Path(tmp_folder_tumor).mkdir(parents=True, exist_ok=True)
    
    output_folder = "data/" + str(pt) + "/" + str(fd)  + "/"
    Path(output_folder).mkdir(parents=True, exist_ok=True)


rule all: 
    input:  OUTPUT_GERMLINE, OUTPUT_UNION_GERMLINE, PLOTDATA_FILTERED



rule high_cs_count_germline_k40:
    input:
        bam_file = lambda wildcards: str(Path(GERMLINE_FILES[wildcards.pt_normal]))
    output: 
        kmers_pre = "data/{pt_normal}/{output_f_normal}/all_germline_filtered_bams_tumor_ci5_cs1e9_k40/germline_kmers.kmc_pre", 
        kmers_suf = "data/{pt_normal}/{output_f_normal}/all_germline_filtered_bams_tumor_ci5_cs1e9_k40/germline_kmers.kmc_suf"
    params:
        tmpdir = "tmp_normal/tmp_normal_{pt_normal}/{output_f_normal}_filtered_bams_tumor_ci4_cs1e9_k40/"
    conda: 
        "envs/ctDNA.yml"
    threads: 1
    shell:
        'kmc -k40 -sm -ci0 -cs1000000000 -cx1000000000 -fbam {input.bam_file} data/{wildcards.pt_normal}/{wildcards.output_f_normal}/all_germline_filtered_bams_tumor_ci5_cs1e9_k40/germline_kmers {params.tmpdir}'
        



        
