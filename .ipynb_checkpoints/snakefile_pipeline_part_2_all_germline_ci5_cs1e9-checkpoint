import pandas as pd
from pathlib import Path
import os

paramspace = pd.read_csv("data/metadata/paramspace_cfDNA_phaseI.csv", index_col='cfDNA_folder')
cfDNA_FILE_PATHS = paramspace["cfDNA_bam_path"]
UNIQUE_KMERS_PATHS = paramspace["unique_kmers_folder"]
SAMPLES = paramspace["pt_id"]
FOLDERS = paramspace.index



HISTOGRAM_INTERSECTION = expand("data/{pt_hist}/{output_f_hist}/all_germline_ci5_cs1e9/histogram_intersection_all_germline_singletons_excluded_tumor_4_cs.png", zip, pt_hist = SAMPLES, output_f_hist = FOLDERS)
DUMP_INTERSECTION = expand("data/{pt_dump_int}/{output_f_dump_int}/all_germline_ci5_cs1e9/cfDNA_kmers_unique_all_germline_tumor_kmers_intersect_singletons_excluded_tumor_4_cs.txt", zip, pt_dump_int = SAMPLES, output_f_dump_int = FOLDERS)


RATIOS = expand("data/{pt}/{output_f}/all_germline_ci5_cs1e9/big_ratio_all_germline_singletons_excluded_tumor_4_cs.csv" , zip, pt = SAMPLES, output_f = FOLDERS)
SMALL_RATIOS = expand("data/{pt}/{output_f}/all_germline_ci5_cs1e9/small_ratio_all_germline_singletons_excluded_tumor_4_cs.csv" , zip, pt = SAMPLES, output_f = FOLDERS)


for pt, fd in zip(SAMPLES, FOLDERS):
    tmp_folder = "tmp_cfDNA_tumor_ci4_removed_cs1e9/tmp_cfDNA_" + str(pt) + "/" + str(fd)  + "/"
    Path(tmp_folder).mkdir(parents=True, exist_ok=True)
    
    output_folder = "data/" + str(pt) + "/" + str(fd)  + "/"
    Path(output_folder).mkdir(parents=True, exist_ok=True)


rule all: 
    input: HISTOGRAM_INTERSECTION, DUMP_INTERSECTION, RATIOS, SMALL_RATIOS
#OUTPUT_cfDNA_KMERS, 




        
        

###INTERSECT WITH UNIQUE TUMOR K-MERS##
rule all_germline_high_cs_exclude_singletons_tumor_intersect_cfDNA_unique_tumor:
    input:
        unique_tumor_kmers = lambda wildcards: str("data/" + str(wildcards.pt) + "/" + str(Path(UNIQUE_KMERS_PATHS[wildcards.output_f])) +  "/all_germline_ci5_cs1e9/unique_tumor_kmers_all_germline_singletons_excluded_tumor_4_cs.kmc_pre"),
        cfDNA_kmers = "data/{pt}/{output_f}/cs1e9/cfDNA_kmers_cs1e9.kmc_pre"
    output: 
        intersections_pre = "data/{pt}/{output_f}/all_germline_ci5_cs1e9/cfDNA_kmers_unique_all_germline_tumor_kmers_intersect_singletons_excluded_tumor_4_cs.kmc_pre", 
        intersections_suf = "data/{pt}/{output_f}/all_germline_ci5_cs1e9/cfDNA_kmers_unique_all_germline_tumor_kmers_intersect_singletons_excluded_tumor_4_cs.kmc_suf"
    params: 
        unique_tumor_kmers_file = lambda wildcards: str("data/" + str(wildcards.pt) + "/" + str(Path(UNIQUE_KMERS_PATHS[wildcards.output_f])) +  "/all_germline_ci5_cs1e9/unique_tumor_kmers_all_germline_singletons_excluded_tumor_4_cs")
    conda: 
        "envs/ctDNA.yml"
    shell:
        "kmc_tools simple data/{wildcards.pt}/{wildcards.output_f}/cs1e9/cfDNA_kmers_cs1e9 -ci0 -cx1000000000 {params.unique_tumor_kmers_file} -ci0 -cx1000000000 intersect data/{wildcards.pt}/{wildcards.output_f}/all_germline_ci5_cs1e9/cfDNA_kmers_unique_all_germline_tumor_kmers_intersect_singletons_excluded_tumor_4_cs -ci0 -cs1000000000 -cx1000000000 -ocleft" 


#######PLOT HISTOGRAM##################

rule all_germline_high_cs_exclude_singletons_tumor_make_plotfile_intersection:
    input: 
        intersection_pre = "data/{pt}/{output_f}/all_germline_ci5_cs1e9/cfDNA_kmers_unique_all_germline_tumor_kmers_intersect_singletons_excluded_tumor_4_cs.kmc_pre"
    output: 
        plotdata = "data/{pt}/{output_f}/all_germline_ci5_cs1e9/plotdata_intersection_singletons_all_germline_excluded_tumor_4_cs.txt"
    conda:
        "envs/ctDNA.yml"
    shell: 
        "kmc_tools transform data/{wildcards.pt}/{wildcards.output_f}/all_germline_ci5_cs1e9/cfDNA_kmers_unique_all_germline_tumor_kmers_intersect_singletons_excluded_tumor_4_cs -ci0 -cx1000000000 histogram {output.plotdata} -ci0 -cx1000000000"


rule all_germline_high_cs_exclude_singletons_tumor_filter_plotfile_intersection:
    input: 
        plotdata = "data/{pt}/{output_f}/all_germline_ci5_cs1e9/plotdata_intersection_singletons_all_germline_excluded_tumor_4_cs.txt"
    output: 
        plotdata_filtered = "data/{pt}/{output_f}/all_germline_ci5_cs1e9/plotdata_intersection_singletons_all_germline_excluded_tumor_4_cs_filtered.txt"
    conda:
        "envs/ctDNA.yml"
    shell: 
        "awk -F '\t' '$2!=0' {input.plotdata} > {output.plotdata_filtered}"
        
rule all_germline_high_cs_exclude_singletons_tumor_make_plot_intersection:
    input: 
        input_filename = "data/{pt_hist}/{output_f_hist}/all_germline_ci5_cs1e9/plotdata_intersection_singletons_all_germline_excluded_tumor_4_cs_filtered.txt"
    output: 
        output_filename = "data/{pt_hist}/{output_f_hist}/all_germline_ci5_cs1e9/histogram_intersection_all_germline_singletons_excluded_tumor_4_cs.png"
    conda: 
        "envs/ctDNA.yml"
    script:
        "histogram_plots.R"

rule all_germline_high_cs_exclude_singletons_tumor_dump_intersection:
    input: 
        intersection_pre = "data/{pt_dump_int}/{output_f_dump_int}/all_germline_ci5_cs1e9/cfDNA_kmers_unique_all_germline_tumor_kmers_intersect_singletons_excluded_tumor_4_cs.kmc_pre",
        intersection_suf = "data/{pt_dump_int}/{output_f_dump_int}/all_germline_ci5_cs1e9/cfDNA_kmers_unique_all_germline_tumor_kmers_intersect_singletons_excluded_tumor_4_cs.kmc_suf"
    output: 
        plotdata = "data/{pt_dump_int}/{output_f_dump_int}/all_germline_ci5_cs1e9/cfDNA_kmers_unique_all_germline_tumor_kmers_intersect_singletons_excluded_tumor_4_cs.txt"
    conda:
        "envs/ctDNA.yml"
    shell: 
        "kmc_tools transform data/{wildcards.pt_dump_int}/{wildcards.output_f_dump_int}/all_germline_ci5_cs1e9/cfDNA_kmers_unique_all_germline_tumor_kmers_intersect_singletons_excluded_tumor_4_cs -ci0 -cx1000000000 dump data/{wildcards.pt_dump_int}/{wildcards.output_f_dump_int}/all_germline_ci5_cs1e9/cfDNA_kmers_unique_all_germline_tumor_kmers_intersect_singletons_excluded_tumor_4_cs.txt -ci0 -cx1000000000 -cs1000000000"



###########CALCULATE RATIO#############

rule all_germline_high_cs_exclude_singletons_tumor_calculate_big_ratio:
    input: 
        intersection = "data/{pt}/{output_f}/all_germline_ci5_cs1e9/plotdata_intersection_singletons_all_germline_excluded_tumor_4_cs.txt",
        all_cfDNA = "data/{pt}/{output_f}/cs1e9/plotdata_cfDNA_cs1e9.txt",
        unique_tumor = lambda wildcards: str("data/{pt}/" + str(Path(UNIQUE_KMERS_PATHS[wildcards.output_f])) + "/all_germline_ci5_cs1e9/plotdata_unique_tumor_all_germline_singletons_excluded_tumor_4_cs.txt"),
        all_tumor = lambda wildcards: str("data/{pt}/" + str(Path(UNIQUE_KMERS_PATHS[wildcards.output_f])) + "/ci5_cs1e9/plotdata_tumor_singletons_excluded_tumor_4_cs.txt")
    output: 
        ratio = "data/{pt}/{output_f}/all_germline_ci5_cs1e9/big_ratio_all_germline_singletons_excluded_tumor_4_cs.csv" #This should be a csv with just one position where it saves the ratio for the specific sample
    conda: 
        "envs/r4base.yml"
    script:
        "calculate_ratio.R"


rule all_germline_high_cs_exclude_singletons_tumor_calculate_small_ratio:
    input: 
