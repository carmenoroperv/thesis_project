        unique_tumor = lambda wildcards: str("data/{pt}/" + str(Path(UNIQUE_KMERS_PATHS[wildcards.output_f])) + "/all_germline_ci5_cs1e9/plotdata_unique_tumor_all_germline_singletons_excluded_tumor_4_cs.txt")
    output: 
        ratio = "data/{pt}/{output_f}/all_germline_ci5_cs1e9/small_ratio_all_germline_singletons_excluded_tumor_4_cs.csv" #This should be a csv with just one position where it saves the ratio for the specific sample
    conda: 
        "envs/ctDNA.yml"
    script:
        "calculate_ratio_small.R"

